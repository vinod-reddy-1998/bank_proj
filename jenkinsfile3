pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/your-repo.git', branch: 'master'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean compile package'
            }
        }
        stage('Deploy to Test Server') {
            steps {
                sh 'ansible-playbook -i ~/ansible/inventory/test_server.ini ~/ansible/playbook.yml --private-key /path/to/your/key.pem'
            }
        }
        stage('Run Tests') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Deploy to Prod Server') {
            steps {
                sh 'ansible-playbook -i ~/ansible/inventory/prod_server.ini ~/ansible/playbook.yml --private-key /path/to/your/key.pem'
            }
        }
    }
}
